rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra que se aplica a qualquer coleção e qualquer documento dentro dela
    match /{collection}/{docId} {
      // Permite que QUALQUER usuário LOGADO leia ou escreva QUALQUER documento.
      allow read, write: if request.auth != null;
    }
  }
}